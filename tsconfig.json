{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "ES2021"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules", "configurations", "locales"],
}